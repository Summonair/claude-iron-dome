{
    "hooks": {
        "PreToolUse": [
            {
                "matcher": "Bash",
                "hooks": [
                    {
                        "type": "command",
                        "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/intercept.py\""
                    }
                ]
            }
        ]
    },
    "permissions": {
        "ask": [
            "Bash(git push --force:*)",
            "Bash(git reset --hard:*)",
            "Bash(terraform destroy:*)",
            "Bash(cdk destroy:*)",
            "Bash(cdk synth:*)"
        ]
    }
}